    public static RMarketTrans find(RMarketTransId  _transId,
                                    boolean         _forUpdate = false)
    {
        RMarketTrans trans;
        ;
        if (_transId)
        {
            trans.selectForUpdate(_forUpdate);
            
            select firstonly trans
                where trans.TransId  == _transId;
        }
        
        return trans;
    }

]]></Source>
