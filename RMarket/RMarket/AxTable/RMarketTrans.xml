			<Method>
				<Name>newTransId</Name>
				<Source><![CDATA[
    private static RMarketTransId newTransId()
    {
        RMarketTransId transId;
        NumberSequenceReference numberSequenceReference;

        numberSequenceReference = NumberSeqReference::findReference(extendedTypeNum(RMarketTransId));
        if (numberSequenceReference)
            transId = NumberSeq::newGetNum(numberSequenceReference).num();

        if (!transId)
            throw error("Unable to create the new transaction number!");

        return transId;
    }

]]></Source>
			</Method>
			<Method>
				<Name>postTrans</Name>
				<Source><![CDATA[
    public static boolean postTrans(
        RMarketTransId      _transId,
        RMarketTimestamp    _timestamp = 0,
        utcdatetime         _datetime  = DateTimeUtil::minValue())
    {
        RMarketTrans trans;
        //RMarketSum msum;

        ttsbegin;
        while select forupdate trans
            where trans.TransId == _transId
        {
            trans.Timestamp     = _timestamp;
            trans.DateTime      = _datetime;
            trans.Status        = RMarketTransStatus::Posted;
            if (trans.validateWrite())
                trans.update();
        }
        ttscommit;

        return true;
    }

]]></Source>
			</Method>
			<Method>
				<Name>createTransAdjustment</Name>
				<Source><![CDATA[
    public static RMarketTransId createTransAdjustment( 
        RMarketAccount         _account,
        RMarketSubAccount      _subAccount,
        RMarketTransOriginType _originType,
        RMarketTransOriginId   _originId,
        AmountCur              _amount,
        RMarketCryptoCode      _currencyCode,
        RMarketTimestamp       _timestamp = 0,
        utcdatetime            _datetime  = DateTimeUtil::minValue()
        )
    {
        RMarketTrans trans;
        RMarketTransId transId = RMarketTrans::newTransId();

        ttsbegin;
        trans.clear();
        trans.TransId       = transId;
        trans.AccountId     = _account.AccountId;
        trans.SubAccountId  = _subAccount.SubAccountId;
        trans.OriginType    = _originType;
        trans.OriginId      = _originId;
        //trans.Timestamp     = _timestamp;
        //trans.DateTime      = _datetime;
        trans.Status        = RMarketTransStatus::Reserved;
        trans.Amount        = _amount;
        trans.CryptoCode    = _currencyCode;
        if (trans.validateWrite())
            trans.insert();
        ttscommit;

        if(!trans)
            transId = "";

        return transId;
    }

]]></Source>
