			<Method>
				<Name>find</Name>
				<Source><![CDATA[
    public static RMarketSum find(RMarketSubAccountId  _subAccountId,
                                  boolean              _forUpdate = false)
    {
        RMarketSum marketSum;
        ;
        if (_subAccountId)
        {
            marketSum.selectForUpdate(_forUpdate);
            
            select firstonly marketSum
                where marketSum.SubAccountId  == _subAccountId;
        }
        
        return marketSum;
    }

]]></Source>
			</Method>
			<Method>
				<Name>findOrCreate</Name>
				<Source><![CDATA[
    static public RMarketSum findOrCreate(RMarketSubAccountId _subAccountId, boolean _forUpdate = false)
    {
        RMarketSum marketSum = RMarketSum::find(_subAccountId);

        if (!marketSum)
        {
            ttsbegin;

            marketSum.selectForUpdate(true);
            marketSum.clear();
            marketSum.SubAccountId = _subAccountId;
            if (marketSum.validateWrite())
                marketSum.insert();

            ttscommit;
        }
        marketSum.selectForUpdate(_forUpdate);

        return marketSum;
    }

]]></Source>
			</Method>
